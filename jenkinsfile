pipeline {
    agent any
    
tools {
    terraform 'Default'
}
stages {
  
  
  stage('git') {
    steps {
        
        git 'https://github.com/Axceletron/Jenkins.git'
        sh 'sudo cp /home/osboxes/vars.tf ./'
        sh 'ls'
        sh 'pwd'
        sh 'cat vars.tf'
      // One or more steps need to be included within the steps block.
    }
  }


  stage('init') {
    steps {
        sh 'terraform init'
      // One or more steps need to be included within the steps block.
    }
  }

  stage('deploy') {
    steps {
      sh 'terraform apply -auto-approve'
      // One or more steps need to be included within the steps block.
    }
  }

}
}